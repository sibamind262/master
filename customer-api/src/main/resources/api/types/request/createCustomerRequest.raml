#%RAML 1.0 DataType
displayName: Create Customer Request
type: object
properties:
  personalInformation:
    type: object
    properties:
      firstName:
        type: string
        required: true
        example: "Ulrich"
      lastName: 
        type: string
        required: true
        example: "Nielsen"
      companyName:
        type: string
        required: true
        example: "E-ffoc"
      email:
        type: string
        required: true
        example: "ulrichN@effoc.com"
      phone:
        type: string
        required: true
        example: "+494341927420"
  address:
    type: array
    items:
      type: object
      properties:
        street:
          type: string
          required: true
          example: "Steinbrueckstrasse"
        houseNumber: 
          type: number
          required: true
          example: 114
        city:
          type: string
          required: true
          example: "Nuremberg"
        country:
          type: string
          required: true
          example: "Germany"
        postalCode:
          type: string
          required: true
          example: "90408"